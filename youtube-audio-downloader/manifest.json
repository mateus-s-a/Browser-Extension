{
    "manifest_version": 3,
    "name": "YouTube Audio Downloader",
    "version": "1.0",
    "description": "Downloads audio from the active YouTube video.",

    "permissions": [
        "activeTab",
        "scripting",
        "downloads"
    ],

    "host_permissions": [
        "*://*.youtube.com/*"
    ],

    "action": {
        "default_popup": "popup/popup.html"
    },

    "web_accessible_resources": [
        {
            "resources": ["scripts/content-script.js"],
            "matches": ["*://*.youtube.com/*"]
        }
    ]
}